<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.izaac.delayed.pages.MultiTripPage">

    <EditText
        android:id="@+id/trip1_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textStyle="bold"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/trip2_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/trip1_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textStyle="bold"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/trip3_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/trip2_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textStyle="bold"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/trip4_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/trip3_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textStyle="bold"
        android:textAlignment="center" />

    <Button
        android:id="@+id/trip1_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/trip1_text"
        android:visibility="invisible" />

    <Button
        android:id="@+id/trip2_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/trip2_text"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:id="@+id/trip3_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/trip3_text"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:id="@+id/trip4_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/trip4_text"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />
</RelativeLayout>
