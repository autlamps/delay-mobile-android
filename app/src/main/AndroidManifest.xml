<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.izaac.delayed">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".pages.LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pages.createAccount" />
        <activity android:name=".pages.homePage" />
        <activity android:name=".pages.RegisterAccount" />
        <activity android:name=".pages.TripPage" />
        <activity android:name=".pages.MultiTripPage" />
        <activity android:name=".pages.TripRecyclerView" />
        <activity android:name=".pages.DelayListActivity" />
        <activity android:name=".pages.ListDelayDetails"></activity>
    </application>

</manifest>